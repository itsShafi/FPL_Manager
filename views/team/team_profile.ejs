    <section class="section about-section gray-bg" id="about">
        <div class="container">
            <div class="row align-items-center flex-row-reverse">
                <div class="col-lg-6">
                    <div class="about-text go-to">
                        <h3 class="dark-color"> <%= teamStats.NAME%> </h3>

                        
                        
                        <div class="row about-list">
                            <div class="col-xl-12">
                                <div class="media">
                                    <label>Estblished</label>
                                    <p> <%= teamStats.EST%></p>
                                </div>
                                <div class="media">
                                    <label>Stadium </label>
                                    <p> <%= teamStats.STADIUM%></p>
                                </div>
                                <div class="media">
                                    <label>Chairman</label>
                                    <p><%= teamStats.CHAIRMAN%></p>
                                </div>
                                <div class="media">
                                    <label>Coach</label>
                                    <p><%= teamStats.HEAD_COACH%></p>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="about-avatar">
                        <img src="https://www.pngkit.com/png/full/51-516917_premier-league-logo-white.png" title="" alt="" height="150px">
                    </div>
                </div>
            </div>


            <br>

            <div class="counter">
                <div class="row">
                    <div class="col-6 col-lg-2">
                        <div class="count-data text-center">
                            <h6 class="count h2" data-to="500" data-speed="500"><%= teamStats.MATCHES_PLAYED%></h6>
                            <p class="m-0px font-w-600">Matches Played</p>
                        </div>
                    </div>
                    <div class="col-6 col-lg-2">
                        <div class="count-data text-center">
                            <h6 class="count h2" data-to="150" data-speed="150"><%= teamStats.WINS%></h6>
                            <p class="m-0px font-w-600">Wins</p>
                        </div>
                    </div>
                    <div class="col-6 col-lg-2">
                        <div class="count-data text-center">
                            <h6 class="count h2" data-to="850" data-speed="850"><%= teamStats.LOSSES%></h6>
                            <p class="m-0px font-w-600">Losses</p>
                        </div>
                    </div>
                    <div class="col-6 col-lg-2">
                        <div class="count-data text-center">
                            <h6 class="count h2" data-to="190" data-speed="190"><%= teamStats.GOALS%></h6>
                            <p class="m-0px font-w-600">Goals</p>
                        </div>
                    </div>
                    <div class="col-6 col-lg-2">
                        <div class="count-data text-center">
                            <h6 class="count h2" data-to="500" data-speed="500"><%= teamStats.GOALS_CONCEDED%> </h6>
                            <p class="m-0px font-w-600">Goals Conceded</p>
                        </div>
                    </div>

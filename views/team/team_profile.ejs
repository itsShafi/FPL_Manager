                        <div class="count-data text-center">
                            <h6 class="count h2" data-to="500" data-speed="500"><%= teamStats.CLEAN_SHEETS%></h6>
                            <p class="m-0px font-w-600">Clean Sheets</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


